/* Buttons */

.btn {
  padding: 8px 14px;
  border-radius: 25px;
  font-size: 16px;
  font-weight: 700;
}

.input-group-btn .btn {
  padding: 6px 12px;
  font-size: 14px;
  font-weight: 400;
}

.btn-hollow {
  background: none;
  border: 2px solid #26328c;
  color: #26328c;

  transition: background 0.3s ease;

  /*
  color: #fff;
  */
}
.btn-hollow:hover,
.btn-hollow:focus {
  background: #26328c;

  /*
  background: #dfb907;
  background: -moz-linear-gradient(top,  #dfb907 0%, #e6d369 100%);
  background: -webkit-linear-gradient(top,  #dfb907 0%,#e6d369 100%);
  background: linear-gradient(to bottom,  #dfb907 0%,#e6d369 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#dfb907', endColorstr='#e6d369',GradientType=0 );
  color: #fff;
  */
}
.btn-hollow.btn-white {
    border-color: #fff;
    color: #fff;
}
.btn-hollow.btn-white:hover,
.btn-hollow.btn-white:focus {
    background: #fff;
    color: #333;
}

.btn.btn-lg {
    padding: 14px 20px;
    font-size: 22px;
    text-transform: uppercase;
}

/* Extra Colored Buttons (home page ctas) */
.btn.colored {
  background-color: transparent;
  background: -moz-linear-gradient(top,  rgba(0,0,0,0) 0%, rgba(0,0,0,0.3) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.3) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.3) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='rgba(0,0,0,0)', endColorstr='rgba(0,0,0,0.3)',GradientType=0 ); /* IE6-9 */
}

.btn.colored:hover {
  background-color: transparent;
  background: -moz-linear-gradient(top,  rgba(0,0,0,0.3) 0%, rgba(0,0,0,0) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top,  rgba(0,0,0,0.3) 0%,rgba(0,0,0,0) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%,rgba(0,0,0,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='rgba(0,0,0,0.3)', endColorstr='rgba(0,0,0,0)',GradientType=0 ); /* IE6-9 */
}

.btn.colored.purple {background-color: #5C417F;}
.btn.colored.pink {background-color: #BB2375;}
.btn.colored.orange {background-color: #FE5A2F;}
.btn.colored.green {background-color: #00AE56;}
.btn.colored.teal {background-color: #00847B;}


